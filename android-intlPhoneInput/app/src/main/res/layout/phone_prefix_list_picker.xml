<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/phone_prefix_list_picker_root_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:background="?selectableItemBackgroundBorderless"
        android:id="@+id/phone_prefix_list_picker_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ico_close_white"
        android:tint="@android:color/black" />

    <android.support.v7.widget.SearchView
        android:id="@+id/phone_prefix_list_picker_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_prefix_list_picker_close_iv"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search"
        android:showDividers="end"
        android:theme="@style/SearchViewTheme"
        app:iconifiedByDefault="false"
        app:searchIcon="@null" />

    <View
        android:id="@+id/phone_prefix_list_picker_divider"
        android:layout_below="@+id/phone_prefix_list_picker_search"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFCCCCCC"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />

    <ListView
        android:id="@+id/phone_prefix_list_picker_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/phone_prefix_list_picker_divider"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"/>

</RelativeLayout>
